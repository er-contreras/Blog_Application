<div>
  <div class='user'>
    <div class='photo'>Photo:<%= @user.photo%></div>
    <h2>User <%= @user.name%></h2>
    <p>Number of posts: <%= @user.posts_count%></p>
  </div>

  <div>
    <% @posts_list.each do |post| %>
      <ul class='posts'>
        <li class='post'>
          <%= link_to "/users/#{@user.id}/posts/#{post.id}", :action => 'go' do %>
            <h3>Post # <%= post.id %></h3>
          <%end%>
          <p> Text: <%= post.text %></p>
          <div>
            Comments: <%= post.comments_count %>
            Likes: <%= post.likes_count %>
          </div>
        </li>
      </ul>
      <ul>
        <li>
          <% post.recent_comments.each do |comment| %>
            <p>Username: <%= comment.text %></p>
          <%end%>
        </li>
      </ul>
    <%end%>
  </div>
</div>