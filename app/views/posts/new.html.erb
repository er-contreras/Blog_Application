<div id='new_post'>
  <h1>Hello there!</h1>

  <div class='form'>
    <%= form_for Post.new, url: {action: :create} do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <%= form.label :text %>
      <%= form.text_area :text %>
      <%= form.submit "Add new post" %>
    <% end %>
  </div>
</div>